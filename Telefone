Algoritmo "Telefone"



Var

     N, i, j, M, tipoCliente  : inteiro
     telefone, minutos : vetor [0..9] de real
     nome : vetor [0..9] de caractere
     mat, tipoo : vetor [0..4, 0..3] de real
     vet: vetor [0..9] de real

Inicio

      escreva("Informe a quantidade de clientes: ")
      leia(N)
      
      para i de 0 ate N-1 faca

         escreval("Dados do ", i+1, "cliente: ")
         escreval("Nome: ")
         leia(nome[i])
         escreval("telefone: ")
         leia(telefone[i])
         escreval("Tipo: ")
             // linhas
             N <- 3
             //colunas
             M <- 2
             para i de 0 ate N-1 faca
                 escreval("Tipo de assintatura", i+1, " : ")
             para j de 0 ate M-1 faca
                 leia(mat[i, j])
             fimpara
             
           fimpara
         escreval("minutos: ")
         leia(minutos[i])
     fimpara

      escreval

      se minutos[i] <= 90 entao
       
      escreval("Preço da conta ")
      
      para i de 0 ate N- 1 faca
         escreval(vet[i]:3:1)
         senao
         
         para i de 0 ate N-1 faca
           vet[i] <- 0
         para j de 0 ate M-1 faca
           vet[i] <- vet[i] + mat[i, j]
         fimpara
      fimpara
      
         fimse
      fimpara
      
      escreval("Relatório de cliente ")
      para i de 0 ate N-1 faca
         para j de 0 ate M-1 faca
          escreval(nome[i])
          escreval(telefone[i])
          escreval(mat[i, j])
          escreval(minutos[i])
          fimpara
      fimpara


Fimalgoritmo
